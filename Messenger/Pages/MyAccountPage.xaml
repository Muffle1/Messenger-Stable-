                                            <TextBlock Margin="5 0 0 0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#c7c7c7" FontSize="12" TextTrimming="CharacterEllipsis" Text="{Binding Email}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>-->
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
